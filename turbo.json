{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:migrate:up": {
      "cache": false
    },
    "db:migrate:down": {
      "cache": false
    },
    "db:migrate:create": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "cache:topics": {
      "cache": false
    }
  }
}

