{
  "name": "topic-cache-cli",
  "version": "1.0.0",
  "description": "CLI application to cache Hedera topic messages in Redis",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "dotenv -e .env.local -- tsx src/index.ts",
    "clean": "rm -rf dist",
    "cache:topics": "dotenv -e .env.local -- tsx src/index.ts",
    "check:cache": "dotenv -e .env.local -- tsx src/check-cache.ts"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/yargs": "^17.0.32",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}

